{
  "rules": {
    "func-names": [0],
    "no-console": [0],
    "comma-dangle": [0],
    "default-case": [0],
    "no-lonely-if": [0],
    "valid-typeof": [0],
    "global-require": [0],
    "no-await-in-loop": [0],
    "consistent-return": [0],
    "no-param-reassign": [0],
    "no-useless-escape": [0],
    "no-underscore-dangle": [0],
    "no-restricted-syntax": [0],
    "no-unused-expressions": [0],
    "function-paren-newline": [0],
    "max-len": ["error", { "code": 80 }],
    "no-use-before-define": [2, "nofunc"],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "space-before-function-paren": [
      2,
      {
        "named": "never",
        "anonymous": "never"
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ]
  },
  "env": {
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "airbnb-base"]
}
